  }

  .form-group input:focus,
  .form-group select:focus {
    outline: none;
    border-color: var(--accent, #f5ae43);
  }
  .form-group input[type="checkbox"] {
    width: auto;
    height: auto;
    padding: 0;
    margin-right: 8px;
    border: none;
    appearance: checkbox;
    -webkit-appearance: checkbox;
    -moz-appearance: checkbox;
    position: relative;
    border-radius: 0;
    box-sizing: border-box;
    cursor: pointer;
  }

  .form-group input[type="checkbox"] + label {
    display: inline;
    margin: 0;

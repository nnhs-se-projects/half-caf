<!-- include header -->
<%- include('include/_adminHeader') %>
<!-- /include header -->

<div class="ingredientHdr">Ingredients</div>

<div class="ingredients-container">
  <div class="ingredients-header">
    <div class="search-container">
      <input
        type="text"
        id="nameSearch"
        placeholder="Search by name..."
        class="search-input"
      />
    </div>
    <button class="action-button add-ingredient" id="addIngredientBtn">
      <span class="plus-icon">+</span> Add Ingredient
    </button>
  </div>

  <div class="table-container">
    <table class="ingredients-table" id="ingredientsTable">
      <thead>
        <tr>
          <th>Name</th>
          <th>Quantity</th>
          <th>Unit</th>
          <th>Price</th>
          <th>Customizable by user</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% for (let ingredient of ingredients) { %>
        <tr
          data-ingredient-id="<%= ingredient._id %>"
          data-name="<%= ingredient.name.toLowerCase() %>"
        >
          <td><%= ingredient.name %></td>
          <td><%= ingredient.quantity %></td>
          <td><%= ingredient.unit %></td>
          <td>$<%= ingredient.price %></td>
          <td>
            <span
              ><% if (ingredient.type === 'customizable') { %>Yes<% } else {
              %>No<% } %></span
            >
          </td>
          <td class="actions-cell">
            <button
              class="action-button edit"
              data-ingredient-id="<%= ingredient._id %>"
            >
              Edit
            </button>
            <button
              class="action-button delete"
              data-ingredient-id="<%= ingredient._id %>"
              data-ingredient-name="<%= ingredient.name %>"
            >
              Delete
            </button>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
    <div id="noResults" class="no-results" style="display: none">
      <p>No ingredients found matching your search.</p>
    </div>
  </div>
</div>

<!-- Add Ingredient Modal -->
<div id="addIngredientModal" class="modal">
  <div class="modal-content">
    <div class="modal-header">
      <h2>Add New Ingredient</h2>
      <span class="close" data-modal="addIngredientModal">&times;</span>
    </div>
    <form id="addIngredientForm">
      <div class="modal-body">
        <div class="form-group">
          <label for="addName">Name:</label>
          <input
            type="text"
            id="addName"
            placeholder="e.g., Caramel Syrup"
            required
          />
        </div>
        <div class="form-group">
          <label for="addQuantity">Quantity:</label>
          <input
            type="number"
            id="addQuantity"
            placeholder="e.g., 1000"
            required
          />
        </div>
        <div class="form-group">
          <label for="addOrderThreshold">Order Threshold:</label>
          <input
            type="number"
            id="addOrderThreshold"
            placeholder="e.g., 200"
            required
          />
        </div>
        <div class="form-group">
          <label for="addUnit">Unit:</label>
          <input
            type="text"
            id="addUnit"
            placeholder="e.g., ml, g, pumps"
            required
          />
        </div>
        <div class="form-group">
          <label for="addPrice">Price:</label>
          <input
            type="number"
            step="any"
            id="addPrice"
            placeholder="e.g., 10.99"
            required
          />
        </div>
        <div class="form-group">
          <div>
            <input type="checkbox" id="addType" />
            <label for="addType">Customizable by user</label>
          </div>
        </div>
      </div>
      <div class="modal-actions">
        <button
          type="button"
          class="btn-cancel"
          data-modal="addIngredientModal"
        >
          Cancel
        </button>
        <button type="submit" class="btn-submit">Add Ingredient</button>
      </div>
    </form>
  </div>
</div>

<!-- Edit Ingredient Modal -->
<div id="editIngredientModal" class="modal">
  <div class="modal-content">
    <div class="modal-header">
      <h2>Edit Ingredient</h2>
      <span class="close" data-modal="editIngredientModal">&times;</span>
    </div>
    <form id="editIngredientForm">
      <div class="modal-body">
        <input type="hidden" id="editIngredientId" />
        <div class="form-group">
          <label for="editName">Name:</label>
          <input type="text" id="editName" required />
        </div>
        <div class="form-group">
          <label for="editQuantity">Quantity:</label>
          <input type="number" id="editQuantity" required />
        </div>
        <div class="form-group">
          <label for="editOrderThreshold">Order Threshold:</label>
          <input type="number" id="editOrderThreshold" required />
        </div>
        <div class="form-group">
          <label for="editUnit">Unit:</label>
          <input type="text" id="editUnit" required />
        </div>
        <div class="form-group">
          <label for="editPrice">Price:</label>
          <input type="number" step="any" min="0" id="editPrice" required />
        </div>
        <div class="form-group">
          <div>
            <input type="checkbox" id="editType" />
            <label for="editType">Customizable by user</label>
          </div>
        </div>
      </div>
      <div class="modal-actions">
        <button
          type="button"
          class="btn-cancel"
          data-modal="editIngredientModal"
        >
          Cancel
        </button>
        <button type="submit" class="btn-submit">Update Ingredient</button>
      </div>
    </form>
  </div>
</div>

<!-- Delete Ingredient Modal -->
<div id="deleteIngredientModal" class="modal">
  <div class="modal-content">
    <div class="modal-header">
      <h2>Delete Ingredient</h2>
      <span class="close" data-modal="deleteIngredientModal">&times;</span>
    </div>
    <form id="deleteIngredientForm">
      <div class="modal-body">
        <p>Are you sure you want to delete this ingredient?</p>
        <p class="item-to-delete" id="deleteIngredientName"></p>
        <p class="warning">This action cannot be undone.</p>
        <input type="hidden" id="deleteIngredientId" />
      </div>
      <div class="modal-actions">
        <button
          type="button"
          class="btn-cancel"
          data-modal="deleteIngredientModal"
        >
          Cancel
        </button>
        <button type="submit" class="btn-delete">Delete Ingredient</button>
      </div>
    </form>
  </div>
</div>


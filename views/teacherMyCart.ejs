<%- include('include/_teacherHeader') %>

<div id="mainContent">
<body>
  <h2>Cart</h2>

  <%let index = 0;%>
  <% for (let drink of cart){%>
    <div class="card">
      <div class="container">
        <h4><b><%=drink.name%></h4>
        <h5>$<%=drink.price%></h5>
        <ul>
          <%for (let i = 0; i < customizationDict[drink._id].ingredients.length; i++) {%>
            <% if (customizationDict[drink._id].ingredients[i].type === "customizable" && drink.ingredientCounts[i] !== 0) {%>
            <li><%=drink.ingredientCounts[i] + " " + customizationDict[drink._id].ingredients[i].name%></li>
          <%}}%>

          <li><%=drink.temps%></li>
        </ul>
        <%if(drink.instructions.length > 40) { %>
        <p><%=drink.instructions.slice(0,40) + "..."%></p>
        <% } else { %>
          <p><%=drink.instructions%></p>
        <% } %>
        <button type="button" class="remove" drink-index="<%=index%>">Remove</button>
        <%index++;%>
      </div>
    </div>
  <%}%>


  <%if(index > 0) { %>
  <div id="page-content">
    <input type="text" id="rm" placeholder="Enter Room Number" />
    <% if(headerData.enabled === true) {%>
    <input type="submit" class="placeOrder" value="Place Order" />
    <% } else { %>
    <div id="noOrder">
    <h3>Ordering is not currently available</h3>
    </div>
    <% } %>
  </div>
  <%} else { %>
    <h2>Your cart is empty.</h2>
  <% } %>
</body>
</div>

<style>
  #page-content {
    width: 25%;
    margin: 1%;
  }
  #noOrder {
    width: 200%;
  }

  /* Updated button styling */
  .remove {
    background-color: #ff6b6b; /* Same red as cancel buttons */
    color: white;
    padding: 0.5rem 1rem;
    border: none;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .remove:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(255, 107, 107, 0.2);
  }

  .card {
    background: white;
    border-radius: 16px;
    box-shadow: 0 4px 24px rgba(60, 42, 33, 0.1);
    transition: all 0.2s ease;
    border: none;
  }

  .card:hover {
    transform: translateY(-2px);
  }

  .container {
    padding: 1.5rem;
  }

  h4 {
    color: var(--coffee-dark);
    margin-bottom: 0.5rem;
  }

  /* Add these media queries at the end of the style block */
  @media screen and (max-width: 768px) {
    #page-content {
      width: 90%;
      margin: 1rem auto;
    }

    .card {
      margin: 1rem auto;
      width: 90%;
      max-width: 400px;
    }

    .container {
      padding: 1.5rem;
    }

    #mainContent {
      padding: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    #mainContent h2 {
      text-align: center;
      width: 100%;
      margin: 1rem 0;
    }

    /* Improve input field centering */
    #rm {
      width: 100%;
      max-width: 400px;
      margin: 0 auto;
      display: block;
    }

    /* Center the place order button */
    .placeOrder {
      width: 100%;
      max-width: 400px;
      margin: 1rem auto;
      display: block;
    }
  }

</style>
<script src="/js/teacherMyCart.js"></script>
<%- include('include/_footer') %>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Half Caf</title>
    <link rel="stylesheet" href="/css/pico.min.css" />
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="shortcut icon" type="image/png" href="/img/logo.png" />
    <style>
      @media screen and (max-width: 768px) {
        .full-title {
          display: none;
        }
        #leftTrigger {
          display: none;
        }
      }
      @media screen and (min-width: 769px) {
        .mobile-title {
          display: none;
        }
        /* Updated arrow trigger styling */
        #leftTrigger {
          position: fixed;
          top: 50%;
          left: 10px; /* starting at collapsed sidebar edge */
          transform: translateY(-50%);
          width: 30px;
          height: 30px;
          background: var(--coffee-medium);
          cursor: pointer;
          z-index: 1003;
          transition: left 0.3s ease;
          opacity: 0.8; /* added transparency */
          border-top-right-radius: 4px; /* round top right corner */
          border-bottom-right-radius: 4px; /* round bottom right corner */
        }
        #leftTrigger span {
          display: block;
          text-align: center;
          color: white;
          line-height: 30px;
        }
        /* When sidebar is hovered, move arrow accordingly */
        #sidebar:hover + #leftTrigger {
          left: 200px;
        }
      }
    </style>
  </head>
  <body>
    <div class="container" id="logo">
      <%- include('_header') %>
      <h1 class="indexTopBar">
        <span class="full-title">NNHS Half Caf Admin</span>
        <span class="mobile-title">Admin</span>
      </h1>
    </div>
    <div id="sidebar">
      <a href="/addUser">Add User</a>
      <a href="/deleteUser">Delete User</a>
      <a href="/modifyUser">Modify User</a>
      <a href="/addDrink">Add Drink</a>
      <a href="/modifyDrink">Modify Drink</a>
      <a href="/deleteDrink">Delete Drink</a>
      <a href="/addFlavor">Add Flavor</a>
      <a href="/deleteFlavor">Delete Flavor</a>
      <a href="/addTopping">Add Add-On</a>
      <a href="/DeleteTopping">Delete Add-On</a>
      <a href="/metrics">Metrics</a>
      <a href="/scheduler">Scheduler</a>
      <a href="/deliveryPersonManager">Deliverer Manager</a>
      <a href="/teacherMenu">Client View</a>
      <a href="/barista">Barista View</a>
      <a href="https://forms.gle/uqQ8SiAY4BUPCTJp8" target="_blank">Feedback</a>
      <a href="https://forms.gle/MuZF7T39r9adDQRT8" target="_blank"
        >Report a bug</a
      >
      <a href="/logout">Logout</a>

      <a>
        <label class="on-off">
          <% if(headerData.enabled === false) { %>
          <input class="toggle" type="checkbox" id="myCheckbox" />
          <span class="dis-en"></span>
          <h4 style="padding-top: 10px">Orders Disabled</h4>
          <% } else { %>
          <input
            class="toggle"
            type="checkbox"
            id="myCheckbox"
            checked="checked"
          />
          <span class="dis-en"></span>
          <h4 style="padding-top: 10px">Orders Enabled</h4>
          <% } %>
        </label>
      </a>
    </div>
    <div id="leftTrigger"><span>&rarr;</span></div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/notifications.js"></script>
    <script src="/js/refreshOrderingToggle.js"></script>
    <script src="/js/toggleEnabled.js"></script>
    <!-- Add sw-update to listen for updates -->
    <script src="/js/sw-update.js"></script>
  </body>
</html>

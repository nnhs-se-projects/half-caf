<!-- include header -->
<%- include('include/_adminHeader') %>
<!-- /include header -->

<div class="drinkHdr">Drinks</div>

<div class="drinks-container">
  <div class="drinks-header">
    <div class="search-container">
      <input type="text" id="nameSearch" placeholder="Search by name..." class="search-input" />
    </div>
    <button class="action-button add-drink" id="addDrinkBtn">
      <span class="plus-icon">+</span> Add Drink
    </button>
  </div>

  <div class="table-container">
    <table class="drinks-table" id="drinksTable">
      <thead>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% for (let drink of menuItems) { %>
        <tr data-drink-id="<%= drink._id %>" 
            data-name="<%= drink.name.toLowerCase() %>" 
            data-image="<%= drink.imageData %>">
          <td><%= drink.name %></td>
          <td>$<%= drink.price %></td>
          <td class="actions-cell">
            <button class="action-button edit" data-drink-id="<%= drink._id %>">
              Edit
            </button>
            <button class="action-button delete" data-drink-id="<%= drink._id %>" data-drink-name="<%= drink.name %>">
              Delete
            </button>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
    <div id="noResults" class="no-results" style="display: none;">
      <p>No drinks found matching your search.</p>
    </div>
  </div>
</div>

<!-- Add Drink Modal -->
<div id="addDrinkModal" class="modal">
  <div class="modal-content">
    <div class="modal-header">
      <h2>Add New Drink</h2>
      <span class="close" data-modal="addDrinkModal">&times;</span>
    </div>
    <form id="addDrinkForm">
      <div class="modal-body">
        <div class="form-group">
        <label for="addImage">Image</label>
        <input type="file" name="image" id="addImage" />
        <img id="addDrinkImg" style="max-width: 100%; max-height: 300px; object-fit: contain; margin-top: 1rem; display: none;" />
      </div>
        <div class="form-group">
          <label for="addName">Name:</label>
          <input type="text" id="addName" placeholder="Name..." required />
        </div>
        <div class="form-group">
          <label for="addDescription">Description:</label>
          <input type="text" id="addDescription" placeholder="Description..." required />
        </div>
        <div class="form-group">
          <label for="addPrice">Price:</label>
          <input type="text" id="addPrice" placeholder="Price..." required />
        </div>
        <div class="form-group">
          <span class="anchor">Select Default Ingredients</span>
          <div class="ingredients-list" id="addIngredientsList">
            <% for(let ingredient of ingredients) { %>
              <div class="ingredient-item">
                <label>
                  <input type="checkbox" class="add-ingredients" name="ingredients" value="<%= ingredient._id %>" />
                  <%= ingredient.name %>
                  <span class="ingredient-unit" style="margin-left: 8px; font-size: 0.9em; color: #666;">(<%= ingredient.unit %>)</span>
                </label>
                <input type="number" class="ingredient-count" placeholder="Count" style="display: none;" min="1" max="2" value="1" />
              </div>
            <% } %>
          </div>
        </div>
        <div class="form-group">
          <span class="anchor">Select Temps</span>
          <div class="tempBox">
            <% for(let temp of temps){ %>
            <label><input type="checkbox" class="add-temps" name="temps" value="<%=temp%>" /> <%=temp%></label>
            <%} %>
          </div>
        </div>
        <div class="form-group">
          <span class="anchor">Select Options</span>
          <div><input type="checkbox" id="addPopular" /> <label for="addPopular">Popular</label></div>
          <div><input type="checkbox" id="addSpecial" /> <label for="addSpecial">Special</label></div>
          <div><input type="checkbox" id="addCaffeinated" value="Caffeinated" /> <label for="addCaffeinated">Caffeinated</label></div>
          <div hidden><input type="checkbox" id="addAllowDecaf" value="Available in Decaf" /> <label for="addAllowDecaf">Available in Decaf</label></div>
        </div>
      </div>
      <div class="modal-actions">
        <button type="button" class="btn-cancel" data-modal="addDrinkModal">Cancel</button>
        <button type="submit" class="btn-submit">Add Drink</button>
      </div>
    </form>
  </div>
</div>
<!-- Edit Drink Modal -->
<div id="editDrinkModal" class="modal">
  <div class="modal-content">
    <div class="modal-header">
      <h2>Edit Drink</h2>
      <span class="close" data-modal="editDrinkModal">&times;</span>
    </div>
    <form id="editDrinkForm">
      <div class="modal-body">
        <input type="hidden" id="editDrinkId" name="drinkId" />
        <div class="form-group">
          <label for="editImage">Image</label>
          <div class="image-preview-container" style="min-height: 100px; padding: 10px; border: 1px dashed #ccc; margin-bottom: 10px; text-align: center;">
            <img id="editDrinkImg" src="" alt="No image available" 
                style="max-width: 100%; max-height: 200px; display: none;" />
            <div id="noImageMessage" style="display: block; color: #999;">No image available</div>
          </div>
          <input type="file" name="image" id="editImage" />
        </div>
        <div class="form-group">
          <label for="editName">Name:</label>
          <input type="text" id="editName" placeholder="Name..." required />
        </div>
        <div class="form-group">
          <label for="editDescription">Description:</label>
          <input type="text" id="editDescription" placeholder="Description..." required />
        </div>
        <div class="form-group">
          <label for="editPrice">Price:</label>
          <input type="text" id="editPrice" placeholder="Price..." required />
        </div>
        <div class="form-group">
          <span class="anchor">Select Default Ingredients</span>
          <div class="ingredients-list" id="editIngredientsList">
            <% for(let ingredient of ingredients) { %>
              <div class="ingredient-item">
                <label>
                  <input type="checkbox" class="edit-ingredients" name="ingredients" value="<%= ingredient._id %>" />
                  <%= ingredient.name %>
                  <span class="ingredient-unit" style="margin-left: 8px; font-size: 0.9em; color: #666;">(<%= ingredient.unit %>)</span>
                </label>
                <input type="number" class="ingredient-count" placeholder="Count" style="display: none;" min="1" max="2" value="1" />
             </div>
            <% } %>
          </div>
        </div>
        <div class="form-group">
          <span class="anchor">Select Temps</span>
          <div class="tempBox" id="editTemps">
            <% for(let temp of temps){ %>
            <label><input type="checkbox" class="edit-temps" name="temps" value="<%=temp%>" /> <%=temp%></label>
            <%} %>
          </div>
        </div>
        <div class="form-group">
          <span class="anchor">Select Options</span>
          <div><input type="checkbox" id="editPopular" /> <label for="editPopular">Popular</label></div>
          <div><input type="checkbox" id="editSpecial" /> <label for="editSpecial">Special</label></div>
          <div><input type="checkbox" id="editCaffeinated" /> <label for="editCaffeinated">Caffeinated</label></div>
          <div id="editDecafContainer" hidden><input type="checkbox" id="editAllowDecaf" /> <label for="editAllowDecaf">Available in Decaf</label></div>
        </div>
      </div>
      <div class="modal-actions">
        <button type="button" class="btn-cancel" data-modal="editDrinkModal">Cancel</button>
        <button type="submit" class="btn-submit">Update Drink</button>
      </div>
    </form>
  </div>
</div>
<!-- Delete Drink Modal -->
<div id="deleteDrinkModal" class="modal">
  <div class="modal-content">
    <div class="modal-header">
      <h2>Delete Drink</h2>
      <span class="close" data-modal="deleteDrinkModal">&times;</span>
    </div>
    <div class="modal-body">
      <p>Are you sure you want to delete this drink?</p>
      <p class="item-to-delete" id="deleteDrinkName"></p>
      <p class="warning">This action cannot be undone.</p>
    </div>
    <form id="deleteDrinkForm">
      <input type="hidden" id="deleteDrinkId" name="drinkId" />
      <div class="modal-actions">
        <button type="button" class="btn-cancel" data-modal="deleteDrinkModal">Cancel</button>
        <button type="submit" class="btn-delete">Delete Drink</button>
      </div>
    </form>
  </div>
</div>


<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<!-- Main Site -->
<main>
  <img
    src="/img/SE-GitHub-image.png"
    alt="Huskie code logo"
    width="100"
    height="100"
  />
  <h1>Edit Entry</h1>
  <div>
    <label>Date <input type="date" class="date" /></label>
    <fieldset>
      <legend>Habit of Mind:</legend>
      <% for(let habit of habits) { %>
      <label>
        <input type="radio" class="habits" name="habits" value="<%= habit %>" />
        <%= habit %>
      </label>
      <% } %>
    </fieldset>
    <label>
      Journal Entry
      <textarea class="content"><%= entry.content %></textarea>
    </label>

    <input type="submit" class="submit" value="Update Entry" />
  </div>
  <input type="hidden" id="hiddenId" value="<%= id %>" />
  <div>
    <input
      type="submit"
      onclick="deleteEntry(`<%= id %>`)"
      value="Delete Entry"
    />
  </div>
</main>
<!-- /Main Site -->
<script src="/js/editEntry.js"></script>
<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->

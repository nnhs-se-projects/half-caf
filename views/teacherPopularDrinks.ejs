<%- include('include/_teacherHeader') %> 

<div id="mainContent">
  <div class="header-section" style="display: flex; flex-direction: column; align-items: flex-start; padding-top: 5rem;">
    <h2 style="margin-bottom: 1rem;">Popular Drinks</h2>
  </div>
  <style>
    #mainContent {
      max-width: 1200px;
      margin: 0 auto;
      padding: 1rem;
    }

    .card {
      margin: 1rem;
      transition: transform 0.2s ease;
    }

    .card .container {
      padding: 1.5rem;
    }

    .card img {
      width: 100%;
      height: auto;
      object-fit: cover;
    }

    @media screen and (max-width: 768px) {
      #mainContent {
        padding: 0.5rem;
        width: 95%;
        margin: 0 auto;
      }

      .card {
        margin: 1rem 0;
        width: 100%;
      }

      .container {
        padding: 1.5rem;
      }

      .card h4 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
      }

      .card h5 {
        font-size: 1.3rem;
        margin: 0.5rem 0;
      }

      .card p {
        font-size: 1.1rem;
        line-height: 1.4;
      }

      .card img {
        width: 100%;
        max-height: 300px;
        object-fit: cover;
      }
    }

    /* Header section spacing */
    .header-section {
      margin-bottom: 1rem;
    }
  </style>

  <body>
    <% for (let drink of menuItems){%>
      <% let link = "/teacher/customizeDrink/" + drink.name; %>
      <a href = "<%=link%>">
        <div class="card">
          <div class="container">
            <h4><b><%=drink.name%></h4>
            <img src="<%=drink.imageData%>" alt="<%=drink.name%>" style="width:100%">
            <h5>$<%=drink.price%></h5>
            <%if(drink.description.length > 40) { %>
            <p><%=drink.description.slice(0,40) + "..."%></p>
            <% } else { %>
              <p><%=drink.description%></p>
            <% } %>
          </div>
        </div>
      </a>
    <%}%>
  </body>
</div>
  
<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
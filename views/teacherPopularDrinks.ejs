<%- include('include/_teacherHeader') %> 

<div id="mainContent">
  <div class="header-section" style="display: flex; flex-direction: column; align-items: flex-start; padding-top: 5rem;">
    <h2 style="margin-bottom: 1rem;">Popular Drinks</h2>
  </div>
  
  <!-- Popular floating text elements -->
  <div class="popular-badge" style="top: 20%; left: 10%;">Popular!</div>
  <div class="popular-badge" style="top: 40%; right: 15%;">Hot Pick!</div>
  <div class="popular-badge" style="bottom: 30%; left: 20%;">Trending!</div>
  <div class="popular-badge" style="bottom: 18%; right: 10%;">Favorite!</div>
  
  <style>
    #mainContent {
      max-width: 1200px;
      margin: 0 auto;
      padding: 1rem;
      position: relative; /* Required for absolute positioning of badges */
    }

    /* Floating popular badges styling */
    .popular-badge {
      position: absolute;
      padding: 0.5rem 1rem;
      font-size: 1.2rem;
      font-weight: bold;
      color: white;
      border-radius: 8px;
      z-index: 10;
      opacity: 0.8;
      transform: rotate(var(--rotation));
      animation: float 8s infinite ease-in-out;
      box-shadow: 0 3px 10px rgba(0,0,0,0.2);
      pointer-events: none; /* Make sure it doesn't interfere with clicks */
      --rotation: 0deg;
    }
    
    .popular-badge:nth-child(1) {
      background-color: #ff5252;
      --rotation: -15deg;
      animation-delay: 0s;
    }
    
    .popular-badge:nth-child(2) {
      background-color: #ff9800;
      --rotation: 10deg;
      animation-delay: 1s;
    }
    
    .popular-badge:nth-child(3) {
      background-color: #4caf50;
      --rotation: -5deg;
      animation-delay: 2s;
    }
    
    .popular-badge:nth-child(4) {
      background-color: #2196f3;
      --rotation: 8deg;
      animation-delay: 1.5s;
    }
    
    .popular-badge:nth-child(5) {
      background-color: #9c27b0;
      --rotation: -12deg;
      animation-delay: 0.5s;
    }
    
    @keyframes float {
      0%, 100% {
        transform: translateY(0) rotate(var(--rotation));
      }
      50% {
        transform: translateY(-15px) rotate(var(--rotation));
      }
    }

    /* Existing card styling */
    .card {
      margin: 1rem;
      transition: transform 0.2s ease;
      position: relative;
      z-index: 1;
    }

    .card .container {
      padding: 1.5rem;
    }

    .card img {
      width: 100%;
      height: auto;
      object-fit: cover;
    }

    @media screen and (max-width: 768px) {
      #mainContent {
        padding: 0.5rem;
        width: 95%;
        margin: 0 auto;
      }
      
      .popular-badge {
        font-size: 1rem;
        padding: 0.4rem 0.8rem;
      }

      .card {
        margin: 1rem 0;
        width: 100%;
      }

      .container {
        padding: 1.5rem;
      }

      .card h4 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
      }

      .card h5 {
        font-size: 1.3rem;
        margin: 0.5rem 0;
      }

      .card p {
        font-size: 1.1rem;
        line-height: 1.4;
      }

      .card img {
        width: 100%;
        max-height: 300px;
        object-fit: cover;
      }
    }

    /* Header section spacing */
    .header-section {
      margin-bottom: 1rem;
    }
  </style>

  <body>
    <% for (let drink of menuItems){%>
      <% let link = "/teacher/customizeDrink/" + drink.name; %>
      <a href = "<%=link%>">
        <div class="card">
          <div class="container">
            <h4><b><%=drink.name%></h4>
            <img src="<%=drink.imageData%>" alt="<%=drink.name%>" style="width:100%">
            <h5>$<%=drink.price%></h5>
            <%if(drink.description.length > 40) { %>
            <p><%=drink.description.slice(0,40) + "..."%></p>
            <% } else { %>
              <p><%=drink.description%></p>
            <% } %>
          </div>
        </div>
      </a>
    <%}%>
  </body>
</div>
  
<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->